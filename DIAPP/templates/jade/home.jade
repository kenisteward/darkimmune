    .container.pcont(role='main')
      // .dad 
      //   span Drop Files Anywhere
      .row
        .col-md-8.col-md-offset-2
          .dad(ng-model="files" ngf-drop ngf-select ngf-drag-over-class="dragover" ngf-multiple="true" ngf-allow-dir="true" accept="image/*") Drag images here to upload
      .row
        .col-md-8.col-md-offset-2
          .row(ng-repeat="f in dataFiles")
            .col-md-12
              .well
                  .row.vCenter
                    .col-md-6
                       img.img-responsive(ng-src="{{f.data}}")
                    .col-md-6
                      .panel(ng-class="{'panel-success': {{f.progress == 1}}, 'panel-warning': {{f.progress == 0}}, 'panel-danger': {{f.progress == undefined}}}")
                        .panel-heading
                          h3.panel-title {{f.name}}
                        .panel-body 
                              |Size: {{f.size}}
                              br 
                              |Rating: {{ f.rating }}
        // picture container end
